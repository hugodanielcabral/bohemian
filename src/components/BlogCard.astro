---
import { Icon } from "astro-icon/components";

interface Props {
  url: string | undefined;
  frontmatter: {
    title: string;
    short_description: string;
    author: string;
    date: string;
    category: string;
  };
}

const { url, frontmatter } = Astro.props;
---

<a
  href={url || "#"}
  class="bg-white p-8 rounded-md space-y-2 border-2 border-gray-400 hover:scale-105 transition duration-300 ease-in-out relative group hover:bg-secondary-600"
  id="blog-cards"
  data-category={frontmatter.category}
  data-title={frontmatter.title}
>
  <h3
    class="text-lg md:text-xl text-pretty font-oswald text-center xl:text-2xl text-black group-hover:text-secondary-500"
  >
    {frontmatter.title}
  </h3>
  <p
    class="text-sm md:text-base xl:text-lg font-oswald text-pretty text-gray-500 group-hover:text-white"
  >
    {frontmatter.short_description}
  </p>
  <p class="text-xs md:text-xs italic text-gray-500 group-hover:text-gray-300">
    Publicado por {frontmatter.author}
  </p>
  <p class="text-xs md:text-xs italic text-gray-500 group-hover:text-gray-300">
    Fecha de publicaci√≥n: {frontmatter.date}
  </p>
  <Icon
    name={`blog/${frontmatter.category}`}
    class:list={[
      "absolute top-0 right-2 size-6 group-hover:text-white",
      {
        "text-orange-500": frontmatter.category === "recipe",
        "text-blue-500": frontmatter.category === "news",
        "text-yellow-500": frontmatter.category === "tips",
      },
    ]}
  />
</a>
