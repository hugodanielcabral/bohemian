---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="flex flex-row justify-center items-center bg-secondary-500 py-12 md:py-20 wrapper gap-4"
>
  <h1
    class="text-primary-600 text-3xl md:text-6xl lg:text-7xl uppercase mt-0 text-center"
  >
    {title}
  </h1>
</div>
