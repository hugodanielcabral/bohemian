---
interface Props {
  title: string;
  image: string;
  description: string;
}

const { title, image, description } = Astro.props;
---

<div
  class="p-4 flex lg:flex-row flex-col items-center flex-shrink mx-auto bg-primary-600 rounded-md border border-gray-600"
>
  <img src={image} alt={title} class="w-64 sm:w-72" />
  <div class="flex flex-col justify-center items-center">
    <h2
      class="text-secondary-500 font-oswald text-xl md:text-2xl lg:text-3xl uppercase"
    >
      {title}
    </h2>
    <p
      class="text-secondary-500 text-opacity-95 font-oswald w-[90%] mt-2 text-pretty text-sm md:text-lg lg:text-xl"
    >
      {description}
    </p>
  </div>
</div>
