---
interface Props {
  title: string;
  image: string;
  description: string;
  url: string;
}

const { title, image, description, url } = Astro.props;
---

<a
  href={url}
  class="flex lg:flex-row flex-col items-center bg-primary-600 rounded-md border border-gray-600 w-full hover:scale-95 transition-transform duration-300 ease-in-out hover:border-gray-400"
>
  <img src={image} alt={title} class="w-64 sm:w-72" />
  <div class="flex flex-col justify-center items-center flex-grow p-4">
    <h2
      class="text-secondary-500 font-oswald text-xl md:text-2xl lg:text-3xl uppercase"
    >
      {title}
    </h2>
    <p
      class="text-secondary-500 text-opacity-95 font-oswald w-[90%] mt-2 text-pretty text-sm md:text-lg lg:text-xl"
    >
      {description}
    </p>
  </div>
</a>
