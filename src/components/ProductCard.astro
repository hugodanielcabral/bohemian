---
interface Props {
  title: string;
  image: string;
  description: string;
  info?: { title: string; description: string }[];
}

const { title, image, description, info } = Astro.props;
---

<div
  class="flex lg:flex-row flex-col items-center flex-shrink mx-auto bg-primary-600 rounded-md border border-gray-600 w-full"
>
  <img src={image} alt={title} class="w-64 sm:w-72" />
  <div class="flex flex-col justify-center items-center flex-grow p-4">
    <h2
      class="text-secondary-500 font-oswald text-xl md:text-2xl lg:text-3xl uppercase"
    >
      {title}
    </h2>
    <p
      class="text-secondary-500 text-opacity-95 font-oswald w-[90%] mt-2 text-pretty text-sm md:text-lg lg:text-xl"
    >
      {description}
    </p>
  </div>
  {
    info && (
      <div class="bg-secondary-600 shadow-black shadow-sm h-full w-full lg:w-24 p-2 place-content-center space-y-4">
        {info.map((item) => (
          <div class="flex flex-col items-center">
            <h3 class="text-gray-300 font-oswald text-sm text-pretty">
              {item.title}
            </h3>
            <p class="text-gray-300 font-oswald text-xs text-pretty">
              {item.description}
            </p>
          </div>
        ))}
      </div>
    )
  }
</div>
