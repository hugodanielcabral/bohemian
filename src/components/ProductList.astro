---
interface Props {
  title: string;
  productInfo: {
    value: number;
    unit: string;
  };
}

const { title, productInfo } = Astro.props;
---

<li
  class="text-pretty text-lg md:text-xl lg:text-2xl xl:text-3xl font-oswald text-black"
>
  {title}:{" "}
  {productInfo.value + productInfo.unit}
</li>
