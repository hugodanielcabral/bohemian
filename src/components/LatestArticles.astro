---
import type { Frontmatter } from "../types/blogArticles";
const posts = await Astro.glob<Frontmatter>("/src/pages/blog/posts/*.md");

const recentPosts = posts.slice(0, 4);


const articleData = [
  {
    title: recentPosts[0]?.frontmatter.title,
    cover: recentPosts[0]?.frontmatter.cover,
    class: "col-span-2 md:col-span-1",
    url: recentPosts[0]?.url,
  },
  {
    title: recentPosts[1]?.frontmatter.title,
    cover: recentPosts[1]?.frontmatter.cover,
    class: "col-span-2 md:col-span-1",
    url: recentPosts[1]?.url,
  },
  /* {
    title: recentPosts[2]?.frontmatter.title,
    cover: recentPosts[2]?.frontmatter.cover,
    class: "col-span-4 md:col-start-4 md:col-end-5 row-start-1 row-end-2",
    url: recentPosts[2]?.url,
  },
  {
    title: recentPosts[3]?.frontmatter.title,
    cover: recentPosts[3]?.frontmatter.cover,
    class: "col-span-4 md:col-start-3 md:col-end-5 row-start-2 row-end-3",
    url: recentPosts[3]?.url,
  }, */
];
---

<section class="bg-black grid grid-cols-2 md:max-h-[600px]">
  {
    articleData.length > 0 && articleData.map((post) => (
      <a href={post.url} class=`relative group ${post.class} border border-black max-h-[200px] md:max-h-[500px] text-lg first:md:text-2xl last:md:text-2xl md:text-base`>
        <img src={post.cover} alt={post.title} class="h-full w-full object-cover group-hover:opacity-50 transition-all duration-300 ease-in-out" />
        <h3 class="absolute group-hover:block text-secondary-500 font-bold p-4 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 hidden text-pretty uppercase font-oswald text-center">
            {post.title}
        </h3>
      </a>
    ))
  }

  
</section>
